               </accelerator>
            </MenuItem>
            <MenuItem id="openGraphMenuItem" fx:id="openGraphMenuItem" mnemonicParsing="false" onAction="#openPane"
                      text="Open">
               <accelerator>
                  <KeyCodeCombination alt="UP" code="O" control="ANY" meta="UP" shift="UP" shortcut="UP"/>
               </accelerator>
            </MenuItem>
            <MenuItem id="dfsMenuItem" fx:id="saveAsGraphMenuItem" mnemonicParsing="false" onAction="#saveAs"
