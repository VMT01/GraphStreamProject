                     <Insets bottom="10.0" left="10.0" right="10.0" top="6.0"/>
                  </VBox.margin>
                  <font>
                     <Font size="14.0"/>
                  </font>
               </TextArea>
               <HBox alignment="CENTER" prefHeight="40.0" prefWidth="360.0" spacing="50.0">
                  <Button fx:id="drawGraphButton" mnemonicParsing="false" onAction="#drawGraph" text="Draw Graph ">
                     <font>
                        <Font size="14.0"/>
                     </font>
                  </Button>
                  <Button fx:id="repairGraphButton" mnemonicParsing="false" onAction="#repairGraph"
                          text="Repair Graph">
                     <font>
                        <Font size="14.0"/>
                     </font>
                  </Button>
               </HBox>
            </VBox>
         </center>
