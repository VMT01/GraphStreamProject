         <HBox alignment="CENTER" prefHeight="61.0" prefWidth="850.0" spacing="30.0">
            <Button id="showDFSButton" fx:id="showDFSButton" mnemonicParsing="false" onAction="#dfsPane"
                    text="Show DFS">
               <font>
                  <Font size="14.0"/>
               </font>
            </Button>
            <Button id="showBFSButton" fx:id="showBFSButton" mnemonicParsing="false" onAction="#bfsPane"
                    text="ShowBFS">
               <font>
                  <Font size="14.0"/>
               </font>
            </Button>
            <Button id="showLIneButton" fx:id="showLineButton" mnemonicParsing="false" onAction="#showLinePane"
                    text="Show The Line">
               <font>
                  <Font size="14.0"/>
               </font>
            </Button>
            <Button fx:id="screenShotButton" mnemonicParsing="false" onAction="#screenShot" text="Screen Shot">
               <font>
                  <Font size="14.0"/>
               </font>
            </Button>
         </HBox>
      </VBox>
   </center>
   <left>
      <BorderPane fx:id="leftRoot" prefHeight="650.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <center>
            <VBox prefHeight="650.0" prefWidth="400.0" BorderPane.alignment="CENTER">
               <TextArea fx:id="graphNodeTextArea" editable="false" prefHeight="380.0" prefWidth="380.0"
