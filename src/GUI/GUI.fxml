                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <Image url="@../ImagePackage/findIcon.png"/>
                        </ImageView>
                     </graphic>
                  </Button>
               </VBox>
            </right>
         </BorderPane>
         <ListView fx:id="showLineListView" prefHeight="100.0" prefWidth="780.0">
